    <select id="selectDeviceAuthenticate" parameterType="net.pingfang.iot.core.model.AuthenticateInputModel"
            resultMap="DeviceAuthenticateResult">
        SELECT p.mqtt_password,
               p.mqtt_account,
               p.mqtt_secret,
               p.STATUS as product_status,
               d.device_id,
               d.device_name,
               d.STATUS,
               d.product_id,
               d.product_name,
               d.serial_number
        FROM iot_product p
                 LEFT JOIN (SELECT device_id, device_name, STATUS, product_id, product_name, serial_number
                            FROM iot_device
                            WHERE serial_number = #{serialNumber}) AS d ON d.product_id = p.product_id
        WHERE p.product_id = #{productId}
    </select>

